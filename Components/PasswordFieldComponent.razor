<h3>PasswordFieldComponent</h3>

<input type="text"
       @bind-value="@Password"
       @onfocusout="OnInputChanged"/>


@code {

    [Parameter]
    public string Password { get; set; } = "123";

    private void OnInputChanged(EventArgs e)
    {
        PasswordChanged.InvokeAsync(Password);
    }

    [Parameter]
    public EventCallback<string> PasswordChanged { get; set; }

}
